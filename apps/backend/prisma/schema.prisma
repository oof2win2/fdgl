generator kysely {
    provider = "prisma-kysely"

    // Optionally provide a destination directory for the generated file
    // and a filename of your choice
    output   = "../src/types"
    fileName = "db-types.ts"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Authorization {
    apikey      String   @id
    communityId String
    /// @kyselyType(Date)
    expiresAt   DateTime
}

model Categories {
    id          String @id
    name        String
    description String
}

model Communities {
    id      String @id
    name    String
    contact String
}

model Reports {
    id          String  @id
    playername  String
    description String?
    communityId String
    createdBy   String

    revokedAt DateTime? /// @kyselyType(Date)
    createdAt DateTime /// @kyselyType(Date)
    updatedAt DateTime /// @kyselyType(Date)

    @@index([updatedAt])
    @@index([playername])
    @@index([communityId])
}

model ReportCategory {
    reportId   String
    categoryId String

    @@id([reportId, categoryId])
    @@index([reportId])
    @@index([categoryId])
}

model ReportProof {
    proofId  String
    reportId String
    filetype String /// @kyselyType("image/jpeg" | "image/png")

    @@id([proofId, reportId])
    @@index([reportId])
}

model FilterObject {
    id String @id

    /// JSONB object of category filters
    /// @kyselyType(import("./db-base").JSONBStringBoolRecord)
    filteredCategories  Bytes
    /// JSONB object of community filters
    /// @kyselyType(import("./db-base").JSONBStringBoolRecord)
    filteredCommunities Bytes
}

model SystemEvent {
    id Int @id @default(autoincrement())

    /// @kyselyType(import("./notifications").SystemEventNotificationContent)
    data String

    createdAt DateTime /// @kyselyType(Date)
}
